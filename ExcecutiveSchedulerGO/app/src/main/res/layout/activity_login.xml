<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="178dp"
        tools:layout_editor_absoluteY="71dp">

        <Button
            android:id="@+id/loginButton"
            android:text="back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="50dp"
            android:paddingTop="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp">

                <TextView
                    android:layout_width="@dimen/textbox"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/textboxMargin"
                    android:text="@string/username" />

                <TextView
                    android:layout_width="@dimen/textbox"
                    android:layout_height="wrap_content"
                    android:text="@string/password" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/username"
                    android:layout_width="@dimen/textbox"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/textboxMargin"
                    android:background="@drawable/back"
                    android:inputType="textPersonName"
                    android:paddingHorizontal="@dimen/textboxPadding"
                    android:text="@string/username" />


                <EditText
                    android:id="@+id/password"
                    android:layout_width="@dimen/textbox"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back"
                    android:inputType="textPassword"
                    android:paddingHorizontal="@dimen/textboxPadding"
                    android:text="@string/password" />


            </LinearLayout>

            <TextView
                android:id="@+id/tvname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:clickable="true"
                android:paddingVertical="@dimen/textboxPadding"
                android:text="Name"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/name"
                android:layout_width="@dimen/textbox"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/textboxMargin"
                android:background="@drawable/back"
                android:inputType="textPersonName"
                android:paddingHorizontal="@dimen/textboxPadding"
                android:text="name"
                android:visibility="gone" />

            <Button
                android:id="@+id/done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login" />

            <TextView
                android:id="@+id/create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:clickable="true"
                android:paddingVertical="@dimen/textboxPadding"
                android:text="Click to create new User"
                android:textColor="@color/darkRed" />




        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>