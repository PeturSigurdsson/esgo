<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandscapeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:textAlignment="center"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:textSize="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/monday"/>

            <TextView
                android:textAlignment="center"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:textSize="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/tuesday"/>

            <TextView
                android:textAlignment="center"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:textSize="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/wednesday"/>

            <TextView
                android:textAlignment="center"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:textSize="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/thursday"/>

            <TextView
                android:textAlignment="center"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:textSize="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/friday"/>

            <TextView
                android:textAlignment="center"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:textSize="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/saturday"/>

            <TextView
                android:textAlignment="center"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:textSize="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/sunday"/>
        </LinearLayout>

        <ScrollView
            android:id="@+id/landscape_scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/landscape_prev_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/prev"/>

                    <TextView
                        android:id="@+id/landscape_current_week"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01.01.1970"/>

                    <Button
                        android:id="@+id/landscape_next_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/next"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:textAlignment="center"
                            android:background="@color/lightgrey"
                            android:layout_width="match_parent"

                            android:gravity="center"
                            android:textSize="12dp"
                            android:layout_height="30dp"
                            android:text="00:00"/>

                        <TextView
                            android:textAlignment="center"
                            android:background="@color/darkgrey"
                            android:layout_width="match_parent"

                            android:gravity="center"
                            android:textSize="12dp"
                            android:layout_height="30dp"
                            android:text="01:00"/>

                        <TextView
                            android:textAlignment="center"
                            android:background="@color/lightgrey"

                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:layout_height="30dp"
                            android:text="02:00"/>

                        <TextView
                            android:textAlignment="center"
                            android:background="@color/darkgrey"

                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:layout_height="30dp"
                            android:text="03:00"/>

                        <TextView
                            android:textAlignment="center"
                            android:background="@color/lightgrey"

                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:layout_height="30dp"
                            android:text="04:00"/>

                        <TextView
                            android:textAlignment="center"
                            android:background="@color/darkgrey"

                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:layout_height="30dp"
                            android:text="05:00"/>

                        <TextView
                            android:textAlignment="center"
                            android:background="@color/lightgrey"

                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:layout_height="30dp"
                            android:text="06:00"/>

                        <TextView
                            android:textAlignment="center"
                            android:background="@color/darkgrey"

                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:layout_height="30dp"
                            android:text="07:00"/>

                        <TextView
                            android:textAlignment="center"
                            android:background="@color/lightgrey"

                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:layout_height="30dp"
                            android:text="08:00"/>

                        <TextView
                            android:textAlignment="center"
                            android:background="@color/darkgrey"

                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:layout_height="30dp"
                            android:text="09:00"/>

                        <TextView
                            android:textAlignment="center"
                            android:background="@color/lightgrey"

                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:layout_height="30dp"
                            android:text="10:00"/>

                        <TextView
                            android:textAlignment="center"
                            android:background="@color/darkgrey"

                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:layout_height="30dp"
                            android:text="11:00"/>

                        <TextView
                            android:textAlignment="center"
                            android:background="@color/lightgrey"

                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:layout_height="30dp"
                            android:text="12:00"/>

                        <TextView
                            android:textAlignment="center"
                            android:background="@color/darkgrey"

                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:layout_height="30dp"
                            android:text="13:00"/>

                        <TextView
                            android:textAlignment="center"
                            android:background="@color/lightgrey"

                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:layout_height="30dp"
                            android:text="14:00"/>

                        <TextView
                            android:textAlignment="center"
                            android:background="@color/darkgrey"

                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:layout_height="30dp"
                            android:text="15:00"/>

                        <TextView
                            android:textAlignment="center"
                            android:background="@color/lightgrey"

                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:layout_height="30dp"
                            android:text="16:00"/>

                        <TextView
                            android:textAlignment="center"
                            android:background="@color/darkgrey"

                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:layout_height="30dp"
                            android:text="17:00"/>

                        <TextView
                            android:textAlignment="center"
                            android:background="@color/lightgrey"

                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:layout_height="30dp"
                            android:text="18:00"/>

                        <TextView
                            android:textAlignment="center"
                            android:background="@color/darkgrey"

                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:layout_height="30dp"
                            android:text="19:00"/>

                        <TextView
                            android:textAlignment="center"
                            android:background="@color/lightgrey"

                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:layout_height="30dp"
                            android:text="20:00"/>

                        <TextView
                            android:textAlignment="center"
                            android:background="@color/darkgrey"

                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:layout_height="30dp"
                            android:text="21:00"/>

                        <TextView
                            android:textAlignment="center"
                            android:background="@color/lightgrey"

                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:layout_height="30dp"
                            android:text="22:00"/>

                        <TextView
                            android:textAlignment="center"
                            android:background="@color/darkgrey"

                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:layout_height="30dp"
                            android:text="23:00"/>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_weight="1"
                        android:id="@+id/calendarMonday"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/checkerboard1">
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_weight="1"
                        android:id="@+id/calendarTuesday"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/checkerboard2">
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_weight="1"
                        android:id="@+id/calendarWednesday"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/checkerboard1">
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_weight="1"
                        android:id="@+id/calendarThursday"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/checkerboard2">
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_weight="1"
                        android:id="@+id/calendarFriday"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/checkerboard1">
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_weight="1"
                        android:id="@+id/calendarSaturday"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/checkerboard2">
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_weight="1"
                        android:id="@+id/calendarSunday"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/checkerboard1">
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/CardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_background"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone"
        android:layout_margin="@dimen/cardMargin_landscape">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/CardTitle"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textSize="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/CardDescription"
                android:fontFamily="sans-serif-condensed"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/CardStartDate"
                android:fontFamily="sans-serif-condensed"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/CardEndDate"
                android:fontFamily="sans-serif-condensed"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ListView
            android:layout_weight="1"
            android:id="@+id/CardUsers"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

        </ListView>

    </LinearLayout>


</FrameLayout>