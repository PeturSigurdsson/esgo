<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/loginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="100dp"
            android:paddingLeft="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp">

                <TextView
                    android:layout_width="@dimen/textbox"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/textboxMargin"
                    android:text="@string/username"/>

                <TextView
                    android:layout_width="@dimen/textbox"
                    android:layout_height="wrap_content"
                    android:text="@string/password"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/username"
                    android:layout_width="@dimen/textbox"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/textboxMargin"
                    android:paddingHorizontal="@dimen/textboxPadding"
                    android:background="@drawable/back"
                    android:inputType="textPersonName"
                    android:text="@string/username"/>


                <EditText
                    android:id="@+id/password"
                    android:layout_width="@dimen/textbox"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/textboxPadding"
                    android:background="@drawable/back"
                    android:inputType="textPassword"
                    android:text="@string/password"/>


            </LinearLayout>
            <Button
                android:id="@+id/done"
                android:text="@string/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:textColor="@color/darkRed"
                android:layout_marginHorizontal="20dp"
                android:paddingVertical="@dimen/textboxPadding"
                android:text="Click to create new User"/>

            <EditText
                android:id="@+id/name"
                android:layout_width="@dimen/textbox"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginHorizontal="@dimen/textboxMargin"
                android:paddingHorizontal="@dimen/textboxPadding"
                android:background="@drawable/back"
                android:inputType="textPersonName"
                android:text="name"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>